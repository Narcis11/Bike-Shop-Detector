<resources>

    <!-- Base application theme. -->
    <style name="MainActivityTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here.
        <item name="actionBarStyle">@style/ActionBar.Solid.Waldo.BikeShops</item> -->
        <item name="android:actionBarStyle">@style/MainActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonCustomStyle</item>

        <item name="android:titleTextStyle">@style/NoTitleText</item>
       <!-- <item name="android:background">@color/white</item>
        <item name="android:title"></item>
        <item name="android:icon">@drawable/waldo_action_bar</item> -->
    </style>

    <style name="MainActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/white</item>
        <item name="android:displayOptions">showHome</item>
        <!-- <item name="android:logo">@drawable/ic_logo_action_bar</item>-->
    </style>

    <style name="NoTitleText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
    </style>
    <!--Style of the overflow (three dots) button-->
    <style name="OverflowButtonCustomStyle" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="ActionBar.Solid.Waldo.BikeShops" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/white</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:color">@color/waldo_light_blue</item>
    </style>
</resources>
