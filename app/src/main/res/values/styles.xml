<resources>

    <!-- Base application theme. -->
    <style name="MainActivityTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here.-->
        <item name="android:actionBarStyle">@style/MainActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButtonCustomStyle</item>
        <item name="android:titleTextStyle">@style/NoTitleText</item>
    </style>

    <style name="MainActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/white</item>
        <item name="android:displayOptions">showHome</item>
        <item name="android:icon">@android:color/transparent</item>
        <!-- <item name="android:logo">@drawable/ic_logo_action_bar</item>-->
    </style>

    <style name="NoTitleText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
    </style>
    <!--Style of the overflow (three dots) button-->
    <style name="OverflowButtonCustomStyle" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <!--Used by all activities, except for the main activity-->
    <style name="SecondaryActivityTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/SecondaryActivityStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow</item>
    </style>

    <style name="SecondaryActivityStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/header_text</item>
    </style>

</resources>
