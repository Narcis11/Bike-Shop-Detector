<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/list_background"
    tools:context="waldo.bike.form.AddShopFormActivity">

    <!--The design of the form used to add a shop-->
    <!--Adding shop.../Shop added text view-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/add_shop_status"
        android:gravity="center"
        android:visibility="invisible"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:overScrollMode="never"
        android:textIsSelectable="false"
        android:textStyle="normal"
        android:text="test"
        android:layout_gravity="top|center_horizontal"
        android:background="@color/red"
        android:textColor="@color/list_background"
        />

    <TextView
        android:id="@+id/form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:text="@string/form_title"
        android:textColor="@color/header_text"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textSize="8pt">
    </TextView>


    <EditText
        android:id="@+id/new_shop_name"
        android:layout_height="wrap_content"
        android:hint="@string/form_shop_name"
        android:paddingTop="20dp"
        android:inputType="textPersonName"
        android:textColor="@color/header_text"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent">
    </EditText>

    <EditText
        android:id="@+id/new_shop_phone"
        android:layout_height="wrap_content"
        android:hint="@string/form_shop_phone"
        android:paddingTop="20dp"
        android:inputType="phone"
        android:textColor="@color/header_text"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent">
    </EditText>

    <EditText
        android:id="@+id/new_shop_website"
        android:layout_height="wrap_content"
        android:hint="@string/form_shop_website"
        android:paddingTop="20dp"
        android:inputType="textWebEmailAddress"
        android:layout_weight="0"
        android:textColor="@color/header_text"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent">
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_shop_button"
        android:src="@drawable/add_shop"
        android:onClick="addShop"
        android:background="@android:color/transparent"
         />
    </LinearLayout>
</LinearLayout>
