<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="waldo.bike.form.AddShopFormActivity">

    <!--The design of the form used to add a shop-->
    <TextView
        android:id="@+id/placeholder_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="@string/form_shop_placeholder"
        android:textSize="8pt"
        android:layout_gravity="center_horizontal">
    </TextView>

    <TextView
        android:id="@+id/form_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:text="@string/form_title"
        android:textSize="8pt">
    </TextView>

    <EditText
        android:id="@+id/new_shop_name"
        android:layout_height="wrap_content"
        android:hint="@string/form_shop_name"
        android:paddingTop="15dp"
        android:inputType="textPersonName"
        android:layout_width="match_parent">
    </EditText>

    <EditText
        android:id="@+id/new_shop_phone"
        android:layout_height="wrap_content"
        android:hint="@string/form_shop_phone"
        android:paddingTop="15dp"
        android:inputType="phone"
        android:layout_width="match_parent">
    </EditText>

    <EditText
        android:id="@+id/new_shop_website"
        android:layout_height="wrap_content"
        android:hint="@string/form_shop_website"
        android:paddingTop="15dp"
        android:inputType="textWebEmailAddress"
        android:layout_width="match_parent">
    </EditText>
</LinearLayout>
