<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:orientation="horizontal">
<!--Define the layout for a row in the ListView-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/list_item_icon"
            android:layout_gravity="center"
            android:src="@drawable/bike_tool_kit"
            android:requiresFadingEdge="vertical"
            android:layout_width="wrap_content"
            android:paddingRight="15dp"
            android:layout_height="wrap_content"/>

    </FrameLayout>
    <!--Shop name and isOpen-->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.62">
        <TextView
            android:id="@+id/list_item_shopname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/list_item_shopisopen_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:paddingRight="10dp"
            android:layout_below="@+id/list_item_shopname_textview"
            android:textAppearance="?android:textAppearanceSmall"/>

        <TextView
            android:id="@+id/discount_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_toRightOf="@+id/list_item_shopisopen_textview"
            android:layout_toEndOf="@+id/list_item_shopisopen_textview"
            android:layout_alignBaseline="@+id/list_item_shopisopen_textview"
            android:background="@drawable/background_shop_discount"
            android:textColor="@color/discount_text"
            android:visibility="gone"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.38"
        android:gravity="end"

        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_distance_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:maxLines="1"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:id="@+id/list_item_duration_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:maxLines="1"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceMedium"/>
    </LinearLayout>

</LinearLayout>
