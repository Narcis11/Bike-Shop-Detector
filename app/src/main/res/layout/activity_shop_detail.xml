<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="waldo.bike.waldo.ShopDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <fragment
        android:name="com.google.android.gms.maps.StreetViewPanoramaFragment"
        android:id="@+id/streetviewpanorama"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/view_on_map"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="openMap"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/detail_shopname"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:textSize="20sp"
        android:layout_below="@+id/streetviewpanorama"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_shopaddress"
        android:layout_below="@+id/detail_shopname"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_shopphonenumber"
        android:layout_below="@+id/detail_shopaddress"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_shopopeninghours"
        android:layout_below="@+id/detail_shopphonenumber"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_shopwebsite"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:layout_below="@+id/detail_shopopeninghours"
        android:layout_alignParentLeft="true"
        android:paddingBottom="15dp"
        />
    </RelativeLayout>
</LinearLayout>
