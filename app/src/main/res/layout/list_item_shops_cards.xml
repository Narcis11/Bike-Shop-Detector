<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_weight="1"
    android:background="@color/white"
    >

    <!--Used to format each shop from the main activity-->

<!--    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        >-->

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            >

            <ImageView
                android:id="@+id/list_item_icon"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:src="@drawable/bike_tool_kit"
                android:requiresFadingEdge="vertical"
                />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--Shop Name-->
            <TextView
                android:id="@+id/list_item_shopname_textview"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp"
                android:paddingBottom="2dp"
                android:typeface="serif"
                android:fontFamily="sans-serif"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Cel mai lung nume de magazin"
                android:textColor="@color/shop_detail_header"
                android:textAppearance="?android:textAppearanceMedium"/>

            <!--Shop address-->
            <TextView
                android:id="@+id/list_item_shopaddress_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp"
                android:typeface="serif"
                android:layout_below="@+id/list_item_shopname_textview"
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Strada Barbușchi Imitam, nr. 3, sector 2, București"
                android:textColor="@color/shop_detail"
                android:textAppearance="?android:textAppearanceSmall"/>

            <!--Shop discount-->
            <TextView
               android:id="@+id/list_item_discount_view"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textAppearance="?android:textAppearanceSmall"
               android:background="@color/discount_text"
               android:text="-9%"
               android:paddingLeft="18dp"
               android:paddingRight="18dp"
               android:visibility="invisible"
               android:layout_alignParentRight="true"
               android:layout_alignParentTop="true"
               android:layout_gravity="right" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/list_divider"
                android:layout_below="@+id/list_item_shopaddress_textview"
                />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true">

        <!--Distance image-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_distance_imageview"
            android:layout_below="@+id/list_item_icon"
            android:paddingLeft="15dp"
            android:src="@drawable/schedule_shop"/>
        <!--Distance textview-->
        <TextView
            android:id="@+id/list_item_distance_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:maxLines="1"
            android:text="20,3 km"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/shop_detail"
            android:layout_below="@+id/list_item_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!--Open/Closed-->
        <TextView
            android:id="@+id/list_item_shopisopen_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:paddingRight="36dp"
            android:paddingLeft="30dp"
            android:text="Open"
            android:textColor="@color/shop_detail"
            android:layout_below="@+id/list_item_shopname_textview"
            android:textAppearance="?android:textAppearanceMedium"/>

        <!--Duration image-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_duration_imageview"
            android:src="@drawable/map_shop"/>

        <!--Duration TextView-->
        <TextView
            android:id="@+id/list_item_duration_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingTop="3dp"
            android:paddingRight="15dp"
            android:paddingLeft="5dp"
            android:maxLines="1"
            android:text="3min 20sec"
            android:textColor="@color/shop_detail"
            android:layout_below="@+id/list_item_shopname_textview"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceSmall"/>
    </LinearLayout>
<!--    </android.support.v7.widget.CardView>-->
</RelativeLayout>